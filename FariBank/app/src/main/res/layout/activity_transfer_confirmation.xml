<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferConfirmationActivity"
    android:background="@color/purple">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/costum_edittext"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/OrgCNo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin Card Number:"
            android:textColor="@color/lavender"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/OrgCNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5894631132531195"
            android:letterSpacing=".1"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
        android:id="@+id/desCNo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Card Number:"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/desCNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:letterSpacing=".1"
            android:layout_marginStart="195dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"/>


        <TextView
        android:id="@+id/payeeName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payee:"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/payeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatemeh semsari"
            android:layout_marginStart="70dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/amount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/amnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000.5"
            android:layout_marginStart="90dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="10dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Confirmation"
        android:textStyle="bold"
        android:textColor="@color/dark_purple"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/main_transfer"
        android:layout_width="114dp"
        android:layout_height="57dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="144dp"
        android:text="transfer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="114dp"
        android:layout_height="57dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="144dp"
        android:text="cancel"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>