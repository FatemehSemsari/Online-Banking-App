<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChargeActivity"
    android:background="@drawable/charge1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="357dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/costum_edittext"
        android:backgroundTint="@color/lavender"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/charge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/costum_edittext"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/money"
            android:drawablePadding="8dp"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/charge_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:text="How much do you want to charge your account?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Button
            android:id="@+id/charge_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/dark_purple"
            android:text="Charge"
            android:textSize="18sp"
            app:cornerRadius="20dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>