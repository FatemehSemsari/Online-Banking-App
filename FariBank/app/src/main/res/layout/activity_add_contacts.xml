<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/costum_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Contact"
                android:id="@+id/signUpText"
                android:textSize="36dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"/>

            <EditText
                android:id="@+id/new_contact_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/costum_person"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Name"
                android:textColor="@color/black"
                android:inputType="text"
                android:textSize="14sp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>
            <EditText
                android:id="@+id/new_contact_familyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/costum_person"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Family Name"
                android:textColor="@color/black"
                android:inputType="text"
                android:textSize="14sp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/new_contact_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/costum_edittext"
                android:drawableLeft="@drawable/costum_phonenumber"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Phone Number"
                android:textColor="@color/black"
                android:inputType="phone"
                android:textSize="14sp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/add_contact_button"
                android:text="Add Contact"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/dark_purple"
                app:cornerRadius="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>